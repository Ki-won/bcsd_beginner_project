<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="homeScreenMovingItem"
            type="com.bcsd.android.lotteryticketapplication.view.model.TodayLotteryNumber" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_recycler_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.MainActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/today_lottery_balls"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/past_circle_ball_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="180dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circle_purple"
                android:textColor="@color/white"
                android:text="@{homeScreenMovingItem.todayBalls[0]}"/>

            <TextView
                android:id="@+id/past_circle_ball_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="125dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circle_blue"
                android:textColor="@color/white"
                android:text="@{homeScreenMovingItem.todayBalls[1]}"
                />


            <TextView
                android:id="@+id/past_circle_ball_3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circle_green"
                android:textColor="@color/white"
                android:text="@{homeScreenMovingItem.todayBalls[2]}"/>

            <TextView
                android:id="@+id/past_circle_ball_4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circle_red"
                android:textColor="@color/black"
                android:text="@{homeScreenMovingItem.todayBalls[3]}"/>

            <TextView
                android:id="@+id/past_circle_ball_5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circle_yellow"
                android:textColor="@color/black"
                android:text="@{homeScreenMovingItem.todayBalls[4]}"/>

            <TextView
                android:id="@+id/past_circle_ball_6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginStart="95dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circle_purple"
                android:textColor="@color/black"
                android:text="@{homeScreenMovingItem.todayBalls[5]}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="135dp"
                android:layout_marginBottom="30dp"
                android:text="+"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/past_circle_ball_7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginStart="175dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circle_yellow"
                android:textColor="@color/black"
                android:text="@{homeScreenMovingItem.todayBalls[6]}"/>

            <TextView
                android:id="@+id/past_winner_number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="60dp"
                android:text="일치된 숫자:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/past_winner_rank_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="30dp"
                android:text="당첨 등수:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/past_winner_money_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:text="당첨금:"
                android:textSize="20dp" />


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>